{
    "name": "As a developer",
    "version": "1.1.2",
    "manifest_version": 2,
    "description": "TargetProcess. Enhanced. Grab the magic mouse and let's Scrum!",
    "browser_action": { 
        "default_icon": "icons/aad.png",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["tabs", "<all_urls>"],
    "icons": {
        "16": "icons/aad.png",
        "48": "icons/aad.png",
        "128": "icons/aad.png" 
    },
    "background": { 
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["jquery-1.7.2.min.js", "jquery.simulate.js", "aad.js"]
    }]
}
